#version 150

#include "Scattering/ScatteringOptions.include"
#include "Scattering/Scattering.include"

uniform ScatteringOptions options;

in vec2 texcoord;
out vec4 color;

void main() {
    float r, muS;
    getIrradianceRMuS(options, gl_FragCoord.xy, r, muS);
    color = vec4( transmittance(options, r, muS) * max(muS, 0.0) , 0.0);
}