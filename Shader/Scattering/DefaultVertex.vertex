#version 410

uniform mat4 p3d_ModelViewProjectionMatrix;
uniform vec4 bufferSize;

in vec4 p3d_Vertex;

out vec2 texcoordVertex;
out vec2 texcoord;

void main() {
    gl_Position = p3d_ModelViewProjectionMatrix * p3d_Vertex;
    texcoord =  (p3d_Vertex.xz * 0.5 + 0.5);
    texcoordVertex = texcoord;
}