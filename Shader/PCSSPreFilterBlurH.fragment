#version 400


#pragma include "Includes/Configuration.include"

const ivec2 blurDirection = ivec2(1,0);

#pragma include "Includes/PostProcessBlur.include"

uniform sampler2D blurSourceTex;
uniform sampler2D wsNormalTex;

in vec2 texcoord;
out vec4 result;

void main() {
    ivec2 screenCoord = ivec2(gl_FragCoord.xy);
    result = edgePreservingShadowBlur(texcoord, screenCoord, blurSourceTex, wsNormalTex);
}