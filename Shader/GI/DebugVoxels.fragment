#version 400

#define DO_NOT_COMPUTE_VELOCITY
#include "Includes/MaterialPacking.include"

in vec3 pos;
in vec3 nrm;
uniform sampler2D giGrid;

in vec4 voxelResult;

void main() {


    Material m;

    m.baseColor = vec3( abs(voxelResult.xyz) );
    m.roughness = 1.0;
    m.specular =  0.0;
    m.metallic = 0.0;
    m.normal = vec3(nrm);
    m.position = pos;

    renderMaterial(m);
}